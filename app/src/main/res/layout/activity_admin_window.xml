<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminWindow"

    android:background="@color/black"
    >


    <TextView
        android:id="@+id/aw_tv_maintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="32dp"
        android:text="АДМИНИСТРАТОР"
        android:layout_marginTop="15dp"
        android:textAlignment="center"

        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500"
        />





    <EditText
        android:id="@+id/aw_et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aw_tv_maintext"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500"

        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/aw_et_title"
        android:layout_width="394dp"
        android:layout_height="61dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:hint="Заголовок"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500"
        android:textSize="24dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aw_et_id" />

    <EditText
        android:id="@+id/aw_et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/aw_et_title"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aw_btn_Insert"
        android:layout_width="411dp"
        android:layout_height="75dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/purple_500"
        android:text="ДОБАВИТЬ ЗАПИСЬ"
        android:textColor="@color/white"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aw_et_text"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aw_btn_Update"
        android:layout_width="413dp"
        android:layout_height="71dp"
        android:background="@color/purple_500"
        android:text="ИЗМЕНИТЬ ЗАПИСЬ"

        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aw_btn_Insert"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aw_btn_Delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:text="УДАЛИТЬ ЗАПИСЬ"


        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aw_btn_Update"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aw_btn_SelectNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:text="ВСЕ ЗАПИСИ"


        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aw_btn_Delete"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-9dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aw_btn_SelectUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:text="ВСЕ ПОЛЬЗОВАТЕЛИ"

        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aw_btn_SelectNews"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aw_btn_Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:background="@color/purple_500"

        android:text="Назад"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aw_btn_SelectUsers"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>